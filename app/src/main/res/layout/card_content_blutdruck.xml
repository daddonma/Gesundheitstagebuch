<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_margin="10dp"
    android:background="@drawable/card_border_blutdruck"
    >


    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_card_blutdruck"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/letzte_messung"
            android:textColor="#a9a9a9"
            android:layout_margin="5dp"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="140 / 85 (Rechts)"
            android:textColor="#a9a9a9"
            android:textSize="15dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="130 / 85 (Links)"
            android:textColor="#a9a9a9"
            android:textSize="15dp"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/textButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_neue_blutdruck_messung"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/blutdruck"
        android:id="@+id/image"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>