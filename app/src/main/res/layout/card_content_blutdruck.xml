<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_blutdruck"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_margin="10dp"
    android:background="@drawable/card_border_blutdruck"
    >


    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_card_blutdruck"
            android:textColor="#000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/neueste_messung_rechts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(R) 140 / 85\n01.01.2021 12:36 Uhr"
            android:textColor="#a9a9a9"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/neueste_messung_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(L) 120 / 85\n01.01.2021 12:36 Uhr"
            android:textColor="#a9a9a9"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
           />

        <Button
            android:id="@+id/buttonInsertBlutdruckmessung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_neue_blutdruck_messung"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/blutdruck"
        android:id="@+id/image"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>